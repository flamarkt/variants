{
    "name": "flamarkt/variants",
    "description": "Product variants for Flamarkt.",
    "keywords": [
        "flarum",
        "flamarkt",
        "marketplace",
        "ecommerce",
        "products",
        "variants"
    ],
    "type": "flarum-extension",
    "license": "MIT",
    "require": {
        "flarum/core": "^1.2",
        "flamarkt/core": "^0.1.0"
    },
    "authors": [
        {
            "name": "Flamarkt",
            "homepage": "https://flamarkt.org/"
        }
    ],
    "support": {
        "issues": "https://github.com/flamarkt/variants/issues",
        "source": "https://github.com/flamarkt/variants"
    },
    "autoload": {
        "psr-4": {
            "Flamarkt\\Variants\\": "src/"
        }
    },
    "extra": {
        "flarum-extension": {
            "title": "Product Variants",
            "category": "flamarkt",
            "icon": {
                "name": "far fa-clone",
                "backgroundColor": "#266a13",
                "color": "#fff"
            },
            "optional-dependencies": [
                "flamarkt/taxonomies"
            ]
        },
        "flamarkt-backoffice": {
            "showInBackoffice": true,
            "hideFromAdmin": true
        }
    }
}
